<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <include layout="@layout/top_activity_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:layout_marginTop="100px"
        android:layout_marginBottom="100px"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>

        <ImageView
            android:id="@+id/circleImageView3"
            android:layout_width="500px"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/logoText1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="柬埔寨首都國際學校"
            android:textColor="@color/red"
            android:textSize="60px"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold|italic"/>


        <TextView
            android:id="@+id/logoText2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:text="安全通報系統"
            android:textColor="@color/red"
            android:textSize="60px"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textStyle="bold|italic"/>


        <!--<EditText-->
            <!--android:id="@+id/loginUser"-->
            <!--android:layout_width="550px"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_marginBottom="10px"-->
            <!--android:background="@drawable/white_rounded"-->
            <!--android:ems="10"-->
            <!--android:hint="帳號"-->
            <!--android:textSize="50px"-->
            <!--android:layout_weight="1"-->
            <!--android:inputType="textPersonName"-->
            <!--android:textCursorDrawable="@drawable/cursor_color"-->
            <!--android:layout_gravity="center"/>-->

        <LinearLayout
            android:id="@+id/loginUser_ll"
            android:layout_width="550px"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginBottom="10px"
            android:background="@drawable/white_rounded">


            <!--用app:backgroundTint="@color/red"來設定EditText的bottom line顏色-->
            <!--用android:backgroundTint="@color/red"來設定EditText的bottom line顏色-->
            <EditText
                android:id="@+id/loginUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="帳號"
                android:textSize="50px"
                android:inputType="textPersonName"
                android:backgroundTint="@color/red"
                android:textColorHint="@color/red"
                android:textColor="@color/red" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/loginPassword_ll"
            android:layout_width="550px"
            android:layout_height="0dp"
            android:background="@drawable/white_rounded"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="30px"
            android:weightSum="10"
            android:layout_weight="1">


            <!--用app:backgroundTint="@color/red"來設定EditText的bottom line顏色-->
            <!--用android:backgroundTint="@color/red"來設定EditText的bottom line顏色-->
            <EditText
                android:id="@+id/loginPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="密碼"
                android:textSize="50px"
                android:inputType="textPassword"
                android:layout_weight="8"
                android:backgroundTint="@color/red"
                android:textColorHint="@color/red"
                android:textColor="@color/red" />

            <ImageButton
                android:id="@+id/infoButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="forgotPasswordClick"
                android:layout_weight="2"
                android:background="@drawable/info_42"/>
        </LinearLayout>



        <!--<EditText-->
            <!--android:id="@+id/loginPassword"-->
            <!--android:layout_width="550px"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_marginBottom="30px"-->
